<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>localhost</title>
    <link rel='stylesheet' href='/stylesheets/profile.css' />
</head>
<body>

    <div id="algn">
        <div id="card">
            <div id="upper-bg">
                <img src="https://cdn.pixabay.com/photo/2013/07/13/10/51/football-157930_1280.png" alt="profile-pic" class="profile-pic">
            </div>
            <div id="lower-bg">
              <div class="text">
                <p class="name"><%= user.username %></p>
                <p class="title">Frontend React Developer</p>
              </div>
              <div id="icons">
                <a href="#" class="ico"><img width="48" height="48" src="https://img.icons8.com/color/48/gmail-new.png" alt="gmail-new"/></a>
                <a href="#" class="ico">
                  <img width="48" height="48" src="https://img.icons8.com/fluency/48/github.png" alt="github"/>
                </a>
                <a href="#" class="ico">
                  <img width="48" height="48" src="https://img.icons8.com/color/48/linkedin.png" alt="linkedin"/>
                </a>
                <a href="#" class="ico">
                  <img width="48" height="48" src="https://img.icons8.com/color/48/facebook-new.png" alt="facebook-new"/>
                </a>
              </div>
              <div id="btn">
                <a href="/feed" class="msg">Feeds</a>
                <a href="/logout" class="msg">logout</a>
                 <form action="/upload" method="POST" enctype="multipart/form-data">
                  <input type="text" name="filecaption" placeholder="file caption">
                  <input type="file" name="file">
                  <button type="submit">Upload</button>
                 </form>
              </div>
            </div>
        </div>
        </div>
     <hr>  
     <div class="card-section">
       <section class="articles" >
      <% user.posts.forEach(function(post){ %>
        <article>
              <div class="article-wrapper">
                <figure>
                  <img src='/images/uploads/<%= post.image %>' alt="" />
                </figure>
                <div class="article-body">
                  <p>
                    <%= post.imageText %>
                  </p>
                </div>
              </article>
                <%  }) %>
              </article>
     </div>
     
     
</body>
</html>